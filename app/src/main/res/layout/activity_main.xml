<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Conteúdo Principal (Título do menu superior) -->
    <TextView
        android:id="@+id/menuTitle"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#FDFDFD"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:text="Meu Perfil"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <!-- Espaço flexível para empurrar a barra inferior para o fundo -->

    <!-- Barra inferior com botões -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F6F3F3" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Botão "Meu Treino" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMeuTreino"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#D5D5D5"
                android:backgroundTint="@null"
                android:contentDescription="Ir para tela de treino" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Treino"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Espaço entre os botões -->
        <Space
            android:layout_width="64dp"
            android:layout_height="wrap_content" />

        <!-- Botão "Meu Progresso" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMeuProgresso"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#D5D5D5"
                android:contentDescription="Ir para tela de progresso" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Progresso"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Espaço entre os botões -->
        <Space
            android:layout_width="64dp"
            android:layout_height="wrap_content" />

        <!-- Botão "Meu Perfil" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMeuPerfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#D5D5D5"
                android:contentDescription="Ir para tela de perfil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Perfil"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
